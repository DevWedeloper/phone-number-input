---
import 'prismjs/components/prism-typescript.js'
import 'prismjs/components/prism-javascript.js'
import AngularLayout from '@/layouts/AngularLayout.astro'
import { Auto } from '@/components/angular/auto'
import { AutoWithCountrySelect } from '@/components/angular/auto-with-country-select'
import { International } from '@/components/angular/international'
import { InternationalWithCountrySelect } from '@/components/angular/international-with-country-select'
import { InternationalWithCountrySelectLocked } from '@/components/angular/international-with-country-select-locked'
import { National } from '@/components/angular/national'
import { NationalWithCountrySelect } from '@/components/angular/national-with-country-select'
import { NationalWithCountrySelectLocked } from '@/components/angular/national-with-country-select-locked'
import Code from '@/components/Code.astro'
import CodeTabs from '@/components/CodeTabs'
import {
  autoExample,
  autoWithCountrySelectExample,
  internationalExample,
  internationalWithCountrySelectExample,
  internationalWithCountrySelectLockedExample,
  nationalExample,
  nationalWithCountrySelectExample,
  nationalWithCountrySelectLockedExample,
} from './examples'
---

<astro:head>
  <link rel="stylesheet" href="https://unpkg.com/automad-prism-themes@0.3.6/dist/prism-tokyo-night.light-dark.css" />
</astro:head>

<AngularLayout>
  <section>
    <h2>Auto</h2>
    <p>Automatically determines the appropriate configuration based on the userâ€™s country.</p>
    <CodeTabs client:load>
      <Auto slot="example" client:load />
      <Code slot="code" code={autoExample} />
    </CodeTabs>
  </section>

  <section>
    <h2>Auto with Country Select</h2>
    <p>Auto-detection with the ability for users to manually select a country.</p>
    <CodeTabs client:load>
      <AutoWithCountrySelect slot="example" client:load />
      <Code slot="code" code={autoWithCountrySelectExample} />
    </CodeTabs>
  </section>

  <section>
    <h2>International</h2>
    <p>International configuration with dynamic country handling.</p>
    <CodeTabs client:load>
      <International slot="example" client:load />
      <Code slot="code" code={internationalExample} />
    </CodeTabs>
  </section>

  <section>
    <h2>International with Country Select</h2>
    <p>International configuration that allows manual country selection.</p>
    <CodeTabs client:load>
      <InternationalWithCountrySelect slot="example" client:load />
      <Code slot="code" code={internationalWithCountrySelectExample} />
    </CodeTabs>
  </section>

  <section>
    <h2>International with Country Select (Locked)</h2>
    <p>International configuration with country selection locked.</p>
    <CodeTabs client:load>
      <InternationalWithCountrySelectLocked slot="example" client:load />
      <Code slot="code" code={internationalWithCountrySelectLockedExample} />
    </CodeTabs>
  </section>

  <section>
    <h2>National</h2>
    <p>National-only configuration with no international behavior.</p>
    <CodeTabs client:load>
      <National slot="example" client:load />
      <Code slot="code" code={nationalExample} />
    </CodeTabs>
  </section>

  <section>
    <h2>National with Country Select</h2>
    <p>National configuration that allows selecting a country.</p>
    <CodeTabs client:load>
      <NationalWithCountrySelect slot="example" client:load />
      <Code slot="code" code={nationalWithCountrySelectExample} />
    </CodeTabs>
  </section>

  <section>
    <h2>National with Country Select (Locked)</h2>
    <p>National configuration with country selection locked.</p>
    <CodeTabs client:load>
      <NationalWithCountrySelectLocked slot="example" client:load />
      <Code slot="code" code={nationalWithCountrySelectLockedExample} />
    </CodeTabs>
  </section>
</AngularLayout>
